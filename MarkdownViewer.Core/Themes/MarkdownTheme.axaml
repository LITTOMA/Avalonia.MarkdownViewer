<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Markdown renderer theme resources -->
    <Style Selector=":is(Control)">
        <Style.Resources>
            <ResourceDictionary>
                <ResourceDictionary.ThemeDictionaries>
                    <!-- Light theme -->
                    <ResourceDictionary x:Key="Light">
                        <SolidColorBrush x:Key="MarkdownCodeBackground" Color="#F6F8FA"/>
                        <SolidColorBrush x:Key="MarkdownCodeBorder" Color="#EAEAEF"/>
                        <SolidColorBrush x:Key="MarkdownQuoteBackground" Color="#F9F9F9"/>
                        <SolidColorBrush x:Key="MarkdownQuoteForeground" Color="#6C6C6C"/>
                        <SolidColorBrush x:Key="MarkdownBorderColor" Color="#E5E5E5"/>
                        <SolidColorBrush x:Key="MarkdownLinkForeground" Color="#007AFF"/>
                        <SolidColorBrush x:Key="MarkdownTableHeaderBackground" Color="#F7F7F7"/>
                    </ResourceDictionary>
                    
                    <!-- Dark theme -->
                    <ResourceDictionary x:Key="Dark">
                        <SolidColorBrush x:Key="MarkdownCodeBackground" Color="#161B22"/>
                        <SolidColorBrush x:Key="MarkdownCodeBorder" Color="#30363D"/>
                        <SolidColorBrush x:Key="MarkdownQuoteBackground" Color="#161B22"/>
                        <SolidColorBrush x:Key="MarkdownQuoteForeground" Color="#8B949E"/>
                        <SolidColorBrush x:Key="MarkdownBorderColor" Color="#30363D"/>
                        <SolidColorBrush x:Key="MarkdownLinkForeground" Color="#58A6FF"/>
                        <SolidColorBrush x:Key="MarkdownTableHeaderBackground" Color="#21262D"/>
                    </ResourceDictionary>
                    
                    <!-- Default theme (follows system) -->
                    <ResourceDictionary x:Key="Default">
                        <SolidColorBrush x:Key="MarkdownCodeBackground" Color="#F6F8FA"/>
                        <SolidColorBrush x:Key="MarkdownCodeBorder" Color="#EAEAEF"/>
                        <SolidColorBrush x:Key="MarkdownQuoteBackground" Color="#F9F9F9"/>
                        <SolidColorBrush x:Key="MarkdownQuoteForeground" Color="#6C6C6C"/>
                        <SolidColorBrush x:Key="MarkdownBorderColor" Color="#E5E5E5"/>
                        <SolidColorBrush x:Key="MarkdownLinkForeground" Color="#007AFF"/>
                        <SolidColorBrush x:Key="MarkdownTableHeaderBackground" Color="#F7F7F7"/>
                    </ResourceDictionary>
                </ResourceDictionary.ThemeDictionaries>
            </ResourceDictionary>
        </Style.Resources>
    </Style>
    
    <!-- For backward compatibility, also define these resources in global scope -->
    <Style Selector=":is(Application)">
        <Style.Resources>
            <ResourceDictionary>
                <ResourceDictionary.ThemeDictionaries>
                    <!-- Light theme -->
                    <ResourceDictionary x:Key="Light">
                        <SolidColorBrush x:Key="MarkdownCodeBackground" Color="#F6F8FA"/>
                        <SolidColorBrush x:Key="MarkdownCodeBorder" Color="#EAEAEF"/>
                        <SolidColorBrush x:Key="MarkdownQuoteBackground" Color="#F9F9F9"/>
                        <SolidColorBrush x:Key="MarkdownQuoteForeground" Color="#6C6C6C"/>
                        <SolidColorBrush x:Key="MarkdownBorderColor" Color="#E5E5E5"/>
                        <SolidColorBrush x:Key="MarkdownLinkForeground" Color="#007AFF"/>
                        <SolidColorBrush x:Key="MarkdownTableHeaderBackground" Color="#F7F7F7"/>
                    </ResourceDictionary>
                    
                    <!-- Dark theme -->
                    <ResourceDictionary x:Key="Dark">
                        <SolidColorBrush x:Key="MarkdownCodeBackground" Color="#161B22"/>
                        <SolidColorBrush x:Key="MarkdownCodeBorder" Color="#30363D"/>
                        <SolidColorBrush x:Key="MarkdownQuoteBackground" Color="#161B22"/>
                        <SolidColorBrush x:Key="MarkdownQuoteForeground" Color="#8B949E"/>
                        <SolidColorBrush x:Key="MarkdownBorderColor" Color="#30363D"/>
                        <SolidColorBrush x:Key="MarkdownLinkForeground" Color="#58A6FF"/>
                        <SolidColorBrush x:Key="MarkdownTableHeaderBackground" Color="#21262D"/>
                    </ResourceDictionary>
                    
                    <!-- Default theme (follows system) -->
                    <ResourceDictionary x:Key="Default">
                        <SolidColorBrush x:Key="MarkdownCodeBackground" Color="#F6F8FA"/>
                        <SolidColorBrush x:Key="MarkdownCodeBorder" Color="#EAEAEF"/>
                        <SolidColorBrush x:Key="MarkdownQuoteBackground" Color="#F9F9F9"/>
                        <SolidColorBrush x:Key="MarkdownQuoteForeground" Color="#6C6C6C"/>
                        <SolidColorBrush x:Key="MarkdownBorderColor" Color="#E5E5E5"/>
                        <SolidColorBrush x:Key="MarkdownLinkForeground" Color="#007AFF"/>
                        <SolidColorBrush x:Key="MarkdownTableHeaderBackground" Color="#F7F7F7"/>
                    </ResourceDictionary>
                </ResourceDictionary.ThemeDictionaries>
            </ResourceDictionary>
        </Style.Resources>
    </Style>
</Styles> 